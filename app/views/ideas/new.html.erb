<% content_for :styles do %>
  <style>
    label { font-weight: bold }
  </style>
<% end %>

<h1>Create an idea</h1>

<div class="alert alert-warning" role="alert">
  <h5>Ideas can be:</h5>
  <ul>
    <li>New Features</li>
    <li>Improvements</li>
    <li>Page Layout Requests</li>
    <li>etc.</li>
  </ul>

  <h5>Remember:</h5>
  <ul>
    <li>Be clear with your idea and description.</li>
    <li>One specific idea per submission.</li>
    <li>Vote for yours and other ideas after.</li>
    <li>Be patient. Facebook wasn't built overnight.</li>
  </ul>

  <strong>Note:</strong> Make sure you said all you wanted. <strong>You wont be able to edit your idea after it's been created.</strong> This is intentional.
</div>

<%= form_for @idea do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Just a short title here... ex. "Copy all email addresses to my clipboard."' %>
  </div>

  <div class="form-group">
    <%= f.label :description %> <spam style="font-size: 12px">(<%= image_tag 'markdown.png', height: 12 %> <%= link_to 'Styling with Markdown is supported here', 'https://guides.github.com/features/mastering-markdown/', target: '_blank' %>)</spam>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Remember to be clear describing your idea.' %>
  </div>

  <div class="form-group">
    <%= f.label :poster, 'Your Name' %> <small>(<span class="anon-poster" style="color: #007bff; cursor: pointer">Post Anonymously</span>)</small>
    <%= f.text_field :poster, class: 'form-control' %>
  </div>

  <%= f.submit 'Post Idea', class: 'btn btn-lg btn-success' %>
  <%= link_to 'Cancel', ideas_path, class: 'btn btn-danger btn-lg' %>
<% end %>


<% content_for :scripts do %>
  <script>
    $(function() {
      $('.anon-poster').click(function(){
        $('#idea_poster').val('Anonymous');
      })
    })
  </script>
<% end %>
